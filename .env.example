# Required — generate with: openssl rand -hex 32
SECRET_KEY=

# MongoDB
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DATABASE=macroai

# Redis
REDIS_URL=redis://redis:6379

# App
DEBUG=false
SINGLE_USER_MODE=false
CORS_ORIGINS=["http://localhost:3000"]

# Frontend (build-time args for Docker)
# NEXT_PUBLIC_API_URL is empty by default — nginx reverse proxy serves
# everything on the same origin (port 80). Only set this for local dev
# without Docker (e.g. NEXT_PUBLIC_API_URL=http://localhost:8000 in frontend/.env.local)
NEXT_PUBLIC_API_URL=
NEXT_PUBLIC_SINGLE_USER_MODE=false

# Encryption (min 32 chars, used for API key encryption at rest)
# SECRET_KEY is used for both JWT and Fernet encryption
